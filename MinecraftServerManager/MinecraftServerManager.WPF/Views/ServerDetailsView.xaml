<UserControl x:Class="MinecraftServerManager.WPF.Views.ServerDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:MinecraftServerManager.WPF.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.Resources>
        <converters:ServerStatusToColorConverter x:Key="StatusToColor"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <!-- Header with Status -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <Ellipse Width="20" Height="20"
                         Fill="{Binding ServerItem.StatusColor}"
                         VerticalAlignment="Center"
                         Margin="0,0,10,0"/>
                <TextBlock Text="{Binding Name}"
                           FontSize="28"
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- General Information -->
            <GroupBox Header="General Information" Margin="0,0,0,15" Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Folder Name:" Margin="0,0,0,10"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Name}" FontWeight="Bold" Margin="0,0,0,10"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Display Name:" Margin="0,0,0,10"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ServerName}" FontWeight="Bold" Margin="0,0,0,10"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Version:" Margin="0,0,0,10"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Version}" FontWeight="Bold" Margin="0,0,0,10"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Root Path:" Margin="0,0,0,0"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding RootPath}" FontWeight="Bold" TextWrapping="Wrap" Margin="0,0,0,0"/>
                </Grid>
            </GroupBox>

            <!-- Network Configuration -->
            <GroupBox Header="Network Configuration" Margin="0,0,0,15" Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="IPv4 Port:" Margin="0,0,0,10"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Port}" FontWeight="Bold" Margin="0,0,0,10"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="IPv6 Port:" Margin="0,0,0,0"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding PortV6}" FontWeight="Bold" Margin="0,0,0,0"/>
                </Grid>
            </GroupBox>

            <!-- Gameplay Settings -->
            <GroupBox Header="Gameplay Settings" Margin="0,0,0,20" Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Game Mode:" Margin="0,0,0,10"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Gamemode}" FontWeight="Bold" Margin="0,0,0,10"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Difficulty:" Margin="0,0,0,10"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Difficulty}" FontWeight="Bold" Margin="0,0,0,10"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Max Players:" Margin="0,0,0,0"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding MaxPlayers}" FontWeight="Bold" Margin="0,0,0,0"/>
                </Grid>
            </GroupBox>

            <!-- Control Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Start Server"
                        Command="{Binding ServerItem.StartServerCommand}"
                        Padding="20,10"
                        Margin="0,0,10,0"
                        Style="{StaticResource AccentButtonStyle}"/>
                <Button Content="Stop Server"
                        Command="{Binding ServerItem.StopServerCommand}"
                        Padding="20,10"
                        Margin="0,0,10,0"/>
                <Button Content="Open Folder"
                        Command="{Binding ServerItem.OpenFolderCommand}"
                        Padding="20,10"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
