<UserControl x:Class="MinecraftServerManager.WPF.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <!-- Title -->
            <TextBlock Text="Settings" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <!-- Server Configuration -->
            <GroupBox Header="Server Configuration" Margin="0,0,0,20" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Server Root -->
                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="Server Root:"
                               VerticalAlignment="Center"
                               Margin="0,0,10,10"/>
                    <TextBox Grid.Row="0" Grid.Column="1"
                             Text="{Binding ServerRoot, UpdateSourceTrigger=PropertyChanged}"
                             VerticalAlignment="Center"
                             Margin="0,0,10,10"
                             ToolTip="Root directory where all servers are located"/>
                    <Button Grid.Row="0" Grid.Column="2"
                            Content="Browse..."
                            Command="{Binding BrowseServerRootCommand}"
                            VerticalAlignment="Center"
                            Padding="15,5"
                            Margin="0,0,0,10"/>

                    <!-- Current Version -->
                    <TextBlock Grid.Row="1" Grid.Column="0"
                               Text="Current Version:"
                               VerticalAlignment="Center"
                               Margin="0,0,10,10"/>
                    <TextBlock Grid.Row="1" Grid.Column="1"
                               Text="{Binding CurrentMinecraftVersion}"
                               VerticalAlignment="Center"
                               FontWeight="Bold"
                               Margin="0,0,10,10"/>

                    <!-- Log Directory -->
                    <TextBlock Grid.Row="2" Grid.Column="0"
                               Text="Log Directory:"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    <TextBlock Grid.Row="2" Grid.Column="1"
                               Text="{Binding LogDirectory}"
                               VerticalAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,0,10,0"/>
                </Grid>
            </GroupBox>

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Reset to Defaults"
                        Command="{Binding ResetDefaultsCommand}"
                        Padding="15,8"
                        Margin="0,0,10,0"/>
                <Button Content="Save Settings"
                        Command="{Binding SaveSettingsCommand}"
                        Padding="15,8"
                        Style="{StaticResource AccentButtonStyle}"/>
            </StackPanel>

            <!-- Status Message -->
            <TextBlock Text="{Binding StatusMessage}"
                       Margin="0,20,0,0"
                       FontStyle="Italic"
                       TextWrapping="Wrap"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
